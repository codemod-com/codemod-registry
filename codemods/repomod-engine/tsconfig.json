{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "types": ["node", "mocha"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
